@page
@model DB_Project.Pages.loginModel
@{
    Layout = "_Layout1";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <style>
        body {
            background-image: url(img/bg.jpg);
            background-size: cover;
            background-position: center;
        }
        .form-control {
            border-radius: 25px;
            background-color: rgba(255, 255, 255, 0.8); /* set the opacity to 0.8 */
            border: none;
            padding: 10px 20px;
            box-shadow: 0px 0px 5px #ddd;
            opacity: 0.8; /* add the opacity property */
        }

        .form-control:focus {
            outline: none;
            box-shadow: 0px 0px 5px #a2a2a2;
        }

        .submit {
            background-color: #0098A1; /* set the background color to #0098A1 */
            color: #fff;
            border: none;
            border-radius: 25px;
            padding: 10px 20px;
            cursor: pointer;
        }

            .submit:hover {
                background-color: #006b8f; /* change the background color on hover */
            }


    </style>
</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Login</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Welcome Back 🥰</h3>
                        <form action="/login" method="post" class="signin-form">
                            <div class="form-group">
                                <input type="text"  asp-for="@Model.username" class="form-control" name="username" placeholder="Username" required>
                            </div>

                            <div class="form-group">
                                <input id="password-field" asp-for="@Model.password" type="password" class="form-control" name="password" placeholder="Password" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                                
                            <form method="post">
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary submit px-3" asp-page-handler="Login">Log In</button>
                                </div>
                            </form>
                        </form>
                        <form method="post">
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3" asp-page-handler="Signup">Sign Up</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary" style="color: #fff;">
                                        Remember Me
                                        <input type="checkbox" name="remember" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>                                
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
    <script>
        // Password toggle
        $('.toggle-password').click(function () {
            $(this).toggleClass('fa-eye fa-eye-slash');
            var input = $($(this).attr('toggle'));
            if (input.attr('type') == 'password') {
                input.attr('type', 'text');
            } else {
                input.attr('type', 'password');
            }
        });
    </script>
</body>
</html>
